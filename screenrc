#caption        always  "%c Flags:%f hardstatus:%h %H Load:%l %w"
#caption        always  "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"
#caption        always  "%?%F%{.R.}%?%3n %t%? [%h]%?"
