[color]
    ui = true

[credential]
    helper = cache --timeout=28800

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    di = diff
    diff-branch = "!f() { git diff `git merge-base $1 HEAD` HEAD; }; f"
    ds = diff --staged
    glog = log --graph
    log-graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[core]
    excludesfile = ~/.gitignore

#[init]
#    templateDir = ~/.git_template

[merge]
    #tool = vimdiff
    tool = splice

[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[push]
    default = simple

[include]
    path = ~/.current/gitconfig

