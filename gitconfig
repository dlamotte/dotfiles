[user]
    name  = Dan LaMotte
    email = lamotte85@gmail.com

[color]
    ui = true

[credential]
    helper = cache --timeout=28800

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    di = diff
    ds = diff --staged
    glog = log --graph

[core]
    excludesfile = ~/.gitignore

[merge]
    #tool = vimdiff
    tool = splice

[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[push]
    default = simple

[include]
    path = ~/.current/gitconfig

[remote "origin"]
    # fetch pull requests from github
    fetch = +refs/pull/*/head:refs/remotes/origin/pull/*
